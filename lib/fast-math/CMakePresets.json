    {
      "name": "windows-x64",
      "displayName": "Windows x64",
      "description": "64-bit Windows (DLL)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "x64",
        "strategy": "external"
      },
      "cacheVariables": {
        "CMAKE_C_FLAGS": "/O2 /GL",
        "CMAKE_EXE_LINKER_FLAGS": "/LTCG"
      }
    },
    {
      "name": "windows-x86",
      "displayName": "Windows x86",
      "description": "32-bit Windows (DLL)",
      "generator": "Visual Studio 17 2022",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "architecture": {
        "value": "Win32",
        "strategy": "external"
      }
    },

    {
      "name": "linux-x64",
      "displayName": "Linux x64",
      "description": "64-bit Linux (shared library)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-O3 -march=native -fPIC",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-x86",
      "displayName": "Linux x86",
      "description": "32-bit Linux (shared library)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-O3 -m32 -fPIC",
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-arm64",
      "displayName": "Linux ARM64",
      "description": "64-bit ARM Linux (Raspberry Pi 4, servers)",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_C_FLAGS": "-O3 -mcpu=cortex-a72 -fPIC",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_SYSTEM_PROCESSOR": "aarch64"
      }
    },

    {
      "name": "macos-x64",
      "displayName": "macOS Intel",
      "description": "64-bit Intel macOS (.dylib)",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "10.15"
      }
    },
    {
      "name": "macos-arm64",
      "displayName": "macOS Apple Silicon",
      "description": "64-bit ARM macOS (.dylib)",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      }
    },
    {
      "name": "macos-universal",
      "displayName": "macOS Universal",
      "description": "Universal binary (x86_64 + arm64)",
      "generator": "Xcode",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_OSX_ARCHITECTURES": "x86_64;arm64",
        "CMAKE_OSX_DEPLOYMENT_TARGET": "11.0"
      }
    },
    
    {
      "name": "web-wasm",
      "displayName": "WebAssembly",
      "description": "WebAssembly module for browsers",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Emscripten",
        "CMAKE_SYSTEM_PROCESSOR": "wasm32",
        "CMAKE_TOOLCHAIN_FILE": "$env{EMSCRIPTEN}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "CMAKE_EXECUTABLE_SUFFIX": ".js",
        "CMAKE_C_FLAGS": "-O3 -flto -s STRICT=1",
        "CMAKE_EXE_LINKER_FLAGS": "-O3 -flto -s WASM=1 -s ALLOW_MEMORY_GROWTH=1 -s EXPORTED_FUNCTIONS='[\"_malloc\",\"_free\"]' -s EXPORTED_RUNTIME_METHODS='[\"cwrap\",\"UTF8ToString\"]'"
      }
    },
    {
      "name": "web-wasm-no-rtti",
      "displayName": "WebAssembly (No RTTI)",
      "description": "Smaller WASM without C++ RTTI/Exceptions",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Emscripten",
        "CMAKE_SYSTEM_PROCESSOR": "wasm32",
        "CMAKE_TOOLCHAIN_FILE": "$env{EMSCRIPTEN}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "CMAKE_C_FLAGS": "-O3 -flto -s STRICT=1 -fno-rtti -fno-exceptions",
        "CMAKE_EXE_LINKER_FLAGS": "-O3 -flto -s WASM=1 -s DISABLE_EXCEPTION_CATCHING=1 -s ALLOW_MEMORY_GROWTH=1"
      }
    },
    {
      "name": "web-wasm-simd",
      "displayName": "WebAssembly SIMD",
      "description": "WASM with SIMD instructions (faster math)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_SYSTEM_NAME": "Emscripten",
        "CMAKE_SYSTEM_PROCESSOR": "wasm32",
        "CMAKE_TOOLCHAIN_FILE": "$env{EMSCRIPTEN}/upstream/emscripten/cmake/Modules/Platform/Emscripten.cmake",
        "CMAKE_C_FLAGS": "-O3 -flto -msimd128 -s STRICT=1",
        "CMAKE_EXE_LINKER_FLAGS": "-O3 -flto -msimd128 -s WASM=1 -s ALLOW_MEMORY_GROWTH=1"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-all-android",
      "configurePreset": "android-arm64-v8a",
      "targets": ["fmath_library"]
    },
    {
      "name": "build-all-desktop",
      "configurePreset": "windows-x64",
      "targets": ["fmath_library"]
    }
  ]
}